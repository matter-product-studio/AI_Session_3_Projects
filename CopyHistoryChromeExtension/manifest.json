{
  "manifest_version": 2,
  "name": "Clipboard History",
  "version": "1.0",
  "description": "A simple clipboard history extension.",
  "permissions": [
    "clipboardRead",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
